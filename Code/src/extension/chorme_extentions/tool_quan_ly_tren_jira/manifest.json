{
  "name": "PDC PKM v2.0",
  "description": "PDC Project KPI Monitoring",
  "author": "LongNT11@fsoft.com.vn",
  "manifest_version": 2,
  "version": "2.0",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "PDC Project KPI Monitoring"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.insight.fsoft.com.vn/*"
      ],
      "run_at": "document_end",
      "js": [
        "helper.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "app.js",
    "constants.js",
    "app/*.js",
    "libs/*.js",
    "html/*.js",
    "oss/*.js",
    "config/*.json",
    "styles/css/style.css"
  ],
  "icons": {
    "16": "styles/imgs/16.png",
    "32": "styles/imgs/32.png",
    "48": "styles/imgs/48.png",
    "128": "styles/imgs/128.png"
  },
  "permissions": [
    "storage",
    "*://insight.fsoft.com.vn/*"
  ]
}